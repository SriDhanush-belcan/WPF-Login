<Window x:Class="wpfloginscreen.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Screen" Height="336" Width="453" FontSize="14" Background="DimGray" Icon="login.jpg" WindowStartupLocation="CenterScreen" Cursor="">
    <Border Background="LightGray" Margin="20">
        <StackPanel Margin="10,20,7,22">
            <Label Content="WELCOME" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="txtUsername" Background="White" Foreground="Black" FontSize="18"/>
            <Label Content="Password" Foreground="Black"/>
            <PasswordBox Name="txtPassword" Background="White" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60 10" Background="Gray" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
